-- Initial multipaxos.cabal generated by cabal init.  For further
-- documentation, see http://haskell.org/cabal/users-guide/

name:                distdb
version:             0.1.0.0
synopsis:            Distributed db with multipaxos-based consensus
license:             GPL-3
license-file:        LICENSE
author:              Mikhail Volkhov
maintainer:          volhovm.cs@gmail.com
category:            Concurrency
build-type:          Simple
cabal-version:       >=1.10

library
  exposed-modules:     Communication
                     , Types
                     , ConfigFile
                     , Instances
  build-depends:       base >=4.8.2.0 && <4.10
                     , binary >= 0.7
                     , bytestring >= 0.10.6.0
                     , containers >= 0.5.6.2
                     , distributed-process >= 0.5
                     , exceptions >= 0.8.2.1
                     , network >= 2.6.2.1
                     , network-transport >= 0.4.3.1
                     , socket >= 0.6.0.1
                     , time >= 1.5.0.1
                     , transformers >= 0.4.2.0
                     , tuple
  hs-source-dirs:      src/library
  default-language:    Haskell2010
  default-extensions:  OverloadedStrings
                     , RecordWildCards
                     , ScopedTypeVariables

executable distdb-server
  main-is:             Server.hs
  other-modules:       PaxosTypes
                     , PaxosLogic
                     , ServerTypes
  build-depends:       base >=4.8.2.0 && <4.10
                     , binary >= 0.7
                     , bytestring >= 0.10.6.0
                     , containers >= 0.5.6.2
                     , distdb
                     , distributed-process >= 0.5
                     , distributed-process-p2p >= 0.1.3.2
                     , exceptions >= 0.8.2.1
                     , lens >= 4.13
                     , mtl >= 2.2.1
                     , network >= 2.6.2.1
                     , network-transport
                     , network-transport-tcp
                     , optparse-applicative >= 0.12.0.0
                     , socket >= 0.6.0.1
                     , time >= 1.5.0.1
                     , transformers >= 0.4.2.0
                     , tuple
  hs-source-dirs:      src/server
  default-language:    Haskell2010
  default-extensions:  OverloadedStrings
                     , RecordWildCards
                     , ScopedTypeVariables

executable distdb-client
  main-is:             Client.hs
  build-depends:       base >=4.8.2.0 && <4.10
                     , bytestring >= 0.10.6.0
                     , containers >= 0.5.6.2
                     , distdb
                     , distributed-process >= 0.5
                     , distributed-process-p2p >= 0.1.3.2
                     , network >= 2.6.2.1
                     , optparse-applicative >= 0.12.0.0
                     , time >= 1.5.0.1
                     , transformers >= 0.4.2.0
  hs-source-dirs:      src/client
  default-language:    Haskell2010
  default-extensions:  OverloadedStrings
                     , RecordWildCards
                     , ScopedTypeVariables